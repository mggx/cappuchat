<Window x:Class="Chat.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:viewModels="clr-namespace:Chat.Updater.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="250"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance viewModels:UpdaterViewModel}">
    <Border Background="White" CornerRadius="8" BorderBrush="Black" BorderThickness="1">
        <StackPanel>
            <Label Foreground="DarkCyan" Content="Updating..." FontSize="20" Margin="5" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            <mah:ProgressRing Foreground="DarkCyan" Width="48" Height="48" Margin="10" IsActive="{Binding IsUpdating}"/>
            <Label Foreground="DarkCyan" Content="This may take a moment..." Margin="5" FontSize="12" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
